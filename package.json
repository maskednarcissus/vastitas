{
  "name": "@monte/protocol-contracts",
  "version": "0.1.0",
  "description": "Vastitas - Yield Rails Protocol smart contracts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit",
    "test:integration": "hardhat test test/integration",
    "test:adversarial": "hardhat test test/adversarial",
    "test:foundry": "forge test",
    "test:fuzz": "forge test --match-path test/fuzz/ --fuzz-runs 10000",
    "test:invariant": "forge test --match-contract InvariantSuite --invariant",
    "coverage": "hardhat coverage",
    "deploy:dev": "hardhat run scripts/deploy.ts --network dev",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "verify:deployment": "hardhat run scripts/verify-deployment.ts",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  }
}
